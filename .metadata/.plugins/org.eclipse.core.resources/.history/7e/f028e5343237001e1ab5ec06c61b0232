package array_test;

import java.util.Arrays;

// 1차배열 중 필요한 데이터만 추출하여 신규 배열로 커스텀
public class array4 {

	public static void main(String[] args) {
		new array4().test2();
	}

	public void test2() {
		int a[] = new int[5];
		int b[] = {1,2,3,4,5,6,7};
		int w = 0;
		
		while(w < b.length) {
			if(b[w] % 2 ==0) {
				a[w] = b[w];
			}
			w++;
		}
		System.out.println(Arrays.toString(a));
	}
}
