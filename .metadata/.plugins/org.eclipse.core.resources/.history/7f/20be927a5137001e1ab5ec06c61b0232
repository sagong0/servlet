package array_test;

import java.util.Arrays;

// 2차 배열을 1차 배열로 합산
public class array7 {

	public static void main(String[] args) {
		new array7().test();
	}
	
	public void test() {
		int a[][] = {
				{1,3,5,7},
				{2,4,6,8}
		};
		int ea1 = a.length;	//2
		int ea2 = a[0].length;	//4
		int make = ea1 * ea2;	// 해당 배열의 전체 갯수를 파악하기 위한 공식
		int b[] = new int[make];	// 2차배열을 1차배열로 병합하기 위한 빈배열값.
		
		int ct = 0;	//배열번호  : 1 3 5 7 2 4 6 8 (배열 배정번호)	
		int f,ff;
		for(f=0;f<ea1;f++) {		// 배열 그룹 (2바퀴)
			for(ff=0;ff<ea2;ff++) {	// 배열 데이터 (4바퀴)
				b[ct] = a[f][ff];	// 해당 데이터를 빈 배열에 삽입
				ct++;				// 배열번호 +1씩 증가
			}	
		}
		Arrays.sort(b);	// 배열 오름차순으로 정렬
		//System.out.println(Arrays.toString(b));
		
		/*
		 * 응용문제9
		 * 각 나라별 행복수치 관련 데이터 입니다. 
		 * 해당 데이터를 1차배열로 가공하여 출력 되도록 합니다.
		 * 
		 *  1번 Data : 대한민국, 일본, 중국, 베트남, 태국
		 *  2번 Data : 40, 35, 70, 55, 57
		 *  
		 *  병합된 결과값은 
		 *  ["대한민국(40)", "일본(35)", "중국(70)","베트남(55)", "태국(57)"]
		 **/
		Object country[][] = {
				{"대한민국", "일본", "중국", "베트남", "태국"},
				{40,35,70,55,57}
		};
		int length1 = country.length;	//2
		int length2 = country[0].length;	//4
		int makelength = length1 * length2; 	//8	
		Object newArr[] = new Object[makelength];
		
		int one,two;
		int count2 = 0;
		for(one=0; one<length1; one++) {		// 배열 그룹 (2바퀴)
			for(two=0; two<length2; two++) {	// 배열 데이터 (4바퀴)
				newArr[count2] = country[one][two];	// 해당 데이터를 빈 배열에 삽입
				count2++;				// 배열번호 +1씩 증가
			}	
		}
		System.out.println(Arrays.toString(newArr));
	}

}
