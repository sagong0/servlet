	<script>
		function abc(){
			// 해당 변수는 사용자가 조건에 맞는 모든 값을 입력하였을 경우 submit 작동 되도록~
			var ck = "yes";
			// class 형태 ! 
			var ea = document.getElementsByClassName("no");	 // 같은 class 를 모두 가져옴
			//console.log(ea.length);
			
			/*
			if(document.getElementsByName("no")[1].value ==""){
				alert("data 입력 필요");
			}
			*/
			
			
			var w = 0;
			while(w <= ea.length){
				if(document.getElementsByName("no")[w].value ==""){
					alert("숫자값을 모두 입력해주세요.");
					ck = "no";
					break;
				}else{
					// Nan => Not a number
					//isNaN : true (문자), false(숫자)
					if(isNaN(document.getElementsByName("no")[w].value)) {
						alert("숫자만 입력하세요.");
						ck = "no";
						break;
					}
				}
				w++;
			}
			
			if(ck == "yes"){
				f.submit();
			}
			
			
			// id 형태의 js
			/*
