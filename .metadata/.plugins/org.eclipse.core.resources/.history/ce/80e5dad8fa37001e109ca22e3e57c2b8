<body>
[아이디 찾기]
이름 : <input type="text" id="usernm">
이메일 : <input type="text" id="useremail">
<input type="button" value="아이디 찾기" onclick="id_search()">
<br><br>
아이디명 : <div class="box" id="box"></div>
</body>
<script>
	function id_search(){
		var idck = document.getElementById("usernm");
		var email_ck = document.getElementById("useremail");
		
		if(idck.value != ""){
			alert("아이디를 입력해주세요.");
		}else if(email_ck.val != ""){
			alert("emailsafsd");
		}
	}	
</script>
